@using WebViecLammoi.Models
@using WebViecLammoi.i18n
@using WebViecLammoi.Utils
@model DoanhNghiep
@{
    ViewBag.Title = "_JobAccount";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.8/summernote.css" rel="stylesheet">
<script src="~/Content/js/summernote-vi-VN.js"></script>
<script src="~/Content/js/summernote.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<link href="~/Content/css/Info_Style.css" rel="stylesheet" />
<style>
    .panel-heading {
        display: none;
    }

    @@media only screen and (max-width: 700px) {
        .leftcontact {
            width: 100%;
            /*float: left;*/
            border-right: none;
            box-sizing: border-box;
            padding: 0px 15px 0px 0px;
        }

        .rightcontact {
            width: 100%;
            /*float: right;*/
            box-sizing: border-box;
            padding: 0;
        }

        .container {
            padding-right: 0px;
            padding-left: 0px;
        }
    }
</style>
<section style="background-image: url(/Content/img/map.png); background-attachment: fixed !important; background-size: cover !important; background-position: 50% 0 !important; ">
    <div class="container">
        <div class="row">
            <div class="container text-center">
                <h3 style="font-family: monospace; font-weight: lighter; color: #0094ff">@Common.CompanyInfo</h3>
            </div>
        </div>
    </div>
</section>
<section>
    @using (Html.BeginForm("_JobAccount", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <fieldset id="fom12" class="info_form">
            <div class="container">

                <h1 class="info_header">@Common.FillInfo</h1>

                <div class="contentform">
                    <div id="sendmessage">Your message has been sent successfully. Thank you. </div>


                    <div class="leftcontact">

                        <div class="form-group">
                            <p>@Common.CompanyName (Hoạt động vs thuật toán tìm kiếm của web)<span>*</span></p>
                            <span class="icon-case"><i class="glyphicon glyphicon-home"></i></span>
                            <input type="text" name="TenDoanhNghiep" id="name" required style="height: 41px" />
                            <div class="validation"></div>
                        </div>

                        <div class="form-group">
                            <p>@Common.Abbreviation </p>
                            <span class="icon-case"><i class="glyphicon glyphicon-list-alt"></i></span>
                            <input type="text" name="TenNgan" id="shortname" required style="height: 41px" />
                            <div class="validation"></div>
                        </div>

                        <div class="form-group">
                            <p>@Common.EstablishedYear </p>
                            <span class="icon-case"><i class="glyphicon glyphicon-tint"></i></span>
                            <input type="date" name="NgayThanhLap" id="year" style="height: 41px" />
                            <div class="validation"></div>
                        </div>
                        <div class="form-group">
                            <p>@Common.Phonenumber <span>*</span></p>
                            <span class="icon-case"><i class="glyphicon glyphicon-phone"></i></span>
                            <input type="text" name="DienThoai" id="phone" required style="height: 41px" />
                            <div class="validation"></div>
                        </div>
                        <div class="form-group">
                            <p>@Common.Deputy </p>
                            <span class="icon-case"><i class="glyphicon glyphicon-credit-card"></i></span>
                            <input type="text" name="NguoiDaiDien" id="Text4" required style="height: 41px" />
                            <div class="validation"></div>
                        </div>

                        <div>
                            <p>Chức vụ @Common.Deputy</p>
                            <span class="icon-case"><i class="glyphicon glyphicon-hourglass"></i></span>
                            @Html.DropDownList("ChucVu", null, new { @class = "form-control", @style = "width: 75%; height: 41px" })
                        </div>

                        <div class="form-group">
                            <p>Số điện thoại @Common.Deputy<span>*</span></p>
                            <span class="icon-case"><i class="glyphicon glyphicon-phone"></i></span>
                            <input type="text" name="NguoiDaiDien_DienThoai" id="phone" required style="height: 41px" />
                            <div class="validation"></div>
                        </div>
                        <div class="form-group">
                            <p>E-mail để liên hệ<span>*</span></p>
                            <span class="icon-case"><i class="glyphicon glyphicon-heart-empty"></i></span>
                            <input type="email" name="Email" id="email" required />
                            <div class="validation"></div>
                        </div>

                        <div class="form-group">
                            <p>Website Công Ty</p>
                            <span class="icon-case"><i class="glyphicon glyphicon-globe"></i></span>
                            <input type="text" name="Website" id="Text1" style="height: 41px" />
                            <div class="validation"></div>
                        </div>
                        <div class="form-group">
                            <p>@Common.Introduction</p>
                            <span class="icon-case"><i class="glyphicon glyphicon-comment"></i></span>
                            @Html.TextAreaFor(kh => kh.GioiThieu, new { @class = "form-control", @row = 3 })
                            <script>
                                $(document).ready(function () {
                                    $('#GioiThieu').summernote({
                                        lang: 'vi-VN',
                                        height: '150',
                                        width: '85%'
                                    });
                                });
                            </script>
                        </div>
                    </div>

                    <div class="rightcontact">
                        <div class="form-group">
                            <p><label>Chọn tỉnh/thành phố</label>, @Common.CurrentPlace (Hoạt động vs thuật toán tìm kiếm của web)<span>*</span></p>
                            <div>
                                <span class="icon-case"><i class="glyphicon glyphicon-home"></i></span>
                                @Html.DropDownList("Tinh_ID", null, new { @class = "form-control", @style = "width: 75%; height: 41px" })
                            </div>
                            <br />
                            <label>@Common.Town </label>
                            <div class="form-group">
                                <span class="icon-case"><i class="glyphicon glyphicon-home"></i></span>
                                @Html.DropDownList("Huyen_ID", new SelectList(string.Empty, "Value", "Text"), new { @style = "width: 75%; height: 41px" })
                            </div>
                            <br />
                            <label>@Common.Ward </label>
                            <div class="form-group">
                                <span class="icon-case"><i class="glyphicon glyphicon-home"></i></span>
                                @Html.DropDownList("Xa_ID", new SelectList(string.Empty, "Value", "Text"), new { @style = "width: 75%; height: 41px" })
                            </div>

                            <div class="validation"></div>
                        </div>

                        <div class="form-group">
                            <p>@Common.Address (Cụ thể số nhà, tên đường, phường xã ,...)<span>*</span></p>
                            <span class="icon-case"><i class="glyphicon glyphicon-new-window"></i></span>
                            <input type="text" name="DiaChi" id="diachi" required style="height: 41px" />
                            <div class="validation"></div>
                        </div>

                        <div class="form-group">
                            <p>Logo (giới hạn 5MB)</p>
                            <span class="icon-case"><i class="glyphicon glyphicon-file"></i></span>
                            <div class="image-upload">
                                <input id="file-input" name="Logo" type="file" style="width: 75%; height: 41px" />
                            </div>
                            <p id="thongbaosite" style="color:red; display:none">File quá lớn !!!</p>
                            <div class="validation"></div>
                        </div>
                        <script>
                            $('#file-input').bind('change', function () {
                                //this.files[0].size gets the size of your file.
                                var size = this.files[0].size;
                                const file = Math.round((size / 1024));
                                if (file >= 5200) {
                                    $("#thongbaosite").css('display', 'block');
                                    document.getElementById('btnLuu').disabled = true;
                                } else {
                                    $("#thongbaosite").css('display', 'none')
                                    document.getElementById('btnLuu').disabled = false;
                                }
                            });
                        </script>
                        <div class="form-group">
                            <div>
                                <p>@Common.TypeOfCompany</p>
                                <span class="icon-case"><i class="glyphicon glyphicon-tasks"></i></span>
                                @Html.DropDownList("LoaiHinhDoanhNghiep_ID", null, new { @class = "form-control", @style = "width: 75%; height: 41px" })
                            </div>
                            <div class="validation"></div>
                        </div>
                        <div class="form-group">
                            <div>
                                <p>Khu công nghiệp</p>
                                <span class="icon-case"><i class="glyphicon glyphicon-bullhorn"></i></span>
                                @Html.DropDownList("KhuCongNghiep_ID", null, new { @class = "form-control", @style = "width: 75%; height: 41px" })
                            </div>
                            <div class="validation"></div>
                        </div>

                        <div class="form-group" style="border: 1px dashed #423333; padding: 20px">
                            <div>
                                <p>Ngành:</p>
                                <span class="icon-case"><i class="glyphicon glyphicon-education"></i></span>
                                @Html.DropDownList("NganhKD_ID", null, new { @class = "form-control", @style = "width: 75%; height: 41px" })
                            </div>
                            <div>
                                <p>Nghề:</p>
                                <span class="icon-case"><i class="glyphicon glyphicon-envelope"></i></span>
                                @Html.DropDownList("NgheKD_ID", new SelectList(string.Empty, "Value", "Text"), new { @style = "width: 75%; height: 41px" })
                            </div>
                            <div class="validation"></div>
                        </div>

                        <div class="form-group">
                            <input id="TT_tinh" value="@XString.TinhId" hidden />
                            <input id="TT_huyen" value="@XString.Huyen" hidden />
                            <p>@Common.AmountPeople Hiện Có:</p>
                            <span class="icon-case"><i class="glyphicon glyphicon-new-window"></i></span>
                            <input type="number" name="SoLaoDong" id="kn" required style=" height: 41px" />
                            <div class="validation"></div>
                        </div>
                    </div>
                </div>
                <button id="btnLuu" type="submit" class="bouton-contact">@Common.SaveInfo</button>
            </div>
        </fieldset>
    }
</section>
<script type="text/javascript">

    //  LOAD XÃ/PHƯỜNG CHO LẦN CHẠY ĐẦU TIỀN -- LÚC NÀY ID TỈNH = 42 ( Ninh Thuan )
    $(function () {
        var MaQuanHuyen = $('#TT_huyen').val();//truyền hằng số cho lần chạy đầu tiên
        $.ajax({
            url: "/Account/Xa_ID", // we are calling json method
            data: { Huyen_ID: MaQuanHuyen },
            success: function (response) {
                $(response).each(function (i, e) {
                    $("#Xa_ID").append(
                        $('<option/>')
                            .attr('value', e.Id)
                            .text(e.TenDiaChi)
                    );
                });
            },
            error: function (ex) {
                alert('Lỗi load phường xã 1: ' + ex);
            }
        });
    });


    // LOAD XÃ/PHƯỜNG KHI THAY ĐỔI HUYỆN
    $(function () {
        $('#Huyen_ID').change(function () {
            $('#Xa_ID').empty();
            var MaQuanHuyen = $('#Huyen_ID').val();
            $.ajax({
                url: "/Account/Xa_ID", // we are calling json method
                data: { Huyen_ID: MaQuanHuyen },
                success: function (response) {
                    $(response).each(function (i, e) {
                        $("#Xa_ID").append(
                            $('<option/>')
                                .attr('value', e.Id)
                                .text(e.TenDiaChi)
                        );
                        // here we are adding option for Phuongxa
                    });
                },
                error: function (ex) {
                    alert('Lỗi load phường xã 2: ' + ex);
                }
            });
        });
    });






    // LOAD TỈNH CHO LẦN ĐẦU TIÊN ( TỈNH AN GIANG ID=1)
    $(function () {
        var MaTinh = $('#TT_tinh').val();//truyền hằng số cho lần chạy đầu tiên
        $.ajax({
            url: "/Account/Huyen_ID", // we are calling json method
            data: { Tinh_ID: MaTinh },
            success: function (response) {
                $(response).each(function (i, e) {
                    $("#Huyen_ID").append(
                        $('<option/>')
                            .attr('value', e.Id)
                            .text(e.TenDiaChi)
                    );
                });
            },
            error: function (ex) {
                alert('Lỗi load Quận/ huyện 1: ' + ex);
            }
        });
    });



    //LOAD QUẬN/HUYỆN CHO LẦN CHẠY ĐẦU TIÊN
    $(function () {
        $('#Tinh_ID').change(function () {
            $('#Huyen_ID').empty();
            var MaTinh = $('#Tinh_ID').val();
            $.ajax({
                url: "/Account/Huyen_ID", // we are calling json method
                data: { Tinh_ID: MaTinh },
                // here we are get value of selected QuanHuyen and passing same value
                //as inputto json method Phuongxa.
                success: function (response) {
                    // states contains the JSON list
                    // of states passed from the controller
                    $(response).each(function (i, e) {
                        $("#Huyen_ID").append(
                            $('<option/>')
                                .attr('value', e.Id)
                                .text(e.TenDiaChi)
                        );
                        // here we are adding option for Phuongxa
                    });
                },
                error: function (ex) {
                    alert('Lỗi load Quận/ huyện 2: ' + ex);

                }
            });




            //LOAD XÃ/PHƯỜNG KHI THAY ĐỔI TỈNH --> QUẬN/HUYỆN THAY ĐỔI --> XÃ/PHƯỜNG THAY ĐỔI THEO
            $(function () {
                $('#Xa_ID').empty();
                var MaQuanHuyen = $('#Huyen_ID').val();
                $.ajax({
                    url: "/Account/Xa_ID", // we are calling json method
                    data: { Huyen_ID: MaQuanHuyen },
                    success: function (response) {
                        $(response).each(function (i, e) {
                            $("#Xa_ID").append(
                                $('<option/>')
                                    .attr('value', e.Id)
                                    .text(e.TenDiaChi)
                            );
                            // here we are adding option for Phuongxa
                        });
                    },
                    error: function (ex) {
                        //alert('Lỗi load phường xã khi có đã load quận huyện: ' + ex);
                        var abc = $('#Huyen_ID').val();
                        $(function () {
                            $('#Xa_ID').empty();
                            $.ajax({
                                url: "/Account/Xa_ID", // we are calling json method
                                data: { Huyen_ID: abc },
                                success: function (response) {
                                    $(response).each(function (i, e) {
                                        $("#Xa_ID").append(
                                            $('<option/>')
                                                .attr('value', e.Id)
                                                .text(e.TenDiaChi)
                                        );
                                        // here we are adding option for Phuongxa
                                    });
                                },
                                error: function (ex) {
                                    alert('Lỗi load phường xã ( lúc này đã load quận huyện): ' + ex);
                                }
                            });


                        });
                    }
                });

            });
        });
    });

    //XỬ LÝ LOAD NGHỀ THEO NGÀNH
    $(function () {
        var MaNganhNghe = 0;//truyền hằng số cho lần chạy đầu tiên
        $.ajax({
            url: "/Account/NgheKD_ID", // we are calling json method
            data: { NganhKD_ID: MaNganhNghe },
            success: function (response) {
                $(response).each(function (i, e) {
                    $("#NgheKD_ID").append(
                        $('<option/>')
                            .attr('value', e.NgheKD_ID)
                            .text(e.TenNgheKD)
                    );
                });
            },
            error: function (ex) {
                alert('Lỗi load ngành nghề: ' + ex);
            }
        });
    });


    // XỬ LÝ LOAD NGHỀ THEO NGÀNH - KHI THAY ĐỔI NGÀNH
    $(function () {
        $('#NganhKD_ID').change(function () {
            $('#NgheKD_ID').empty();
            var MaNganhNghe = $('#NganhKD_ID').val();
            $.ajax({
                url: "/Account/NgheKD_ID",
                data: { NganhKD_ID: MaNganhNghe },
                success: function (response) {
                    $(response).each(function (i, e) {
                        $("#NgheKD_ID").append(
                            $('<option/>')
                                .attr('value', e.NgheKD_ID)
                                .text(e.TenNgheKD)
                        );
                        // here we are adding option for Phuongxa
                    });
                },
                error: function (ex) {
                    alert('Lỗi load ngành nghề: ' + ex);
                }
            });
        });
    });

</script>
