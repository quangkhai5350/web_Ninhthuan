@{
    Layout = "~/Views/Shared/_SubLayout.cshtml";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<link href="~/Content/css/Login_Style.css" rel="stylesheet" />

<div class="container" style="width:100%; background-color: white; margin-top: 5%; border-radius: 4px 4px; box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.32);">

    <div class="omb_login">
        <h3 class="omb_authTitle " style="font-family:'Times New Roman'">@WebViecLammoi.i18n.Common.ForgetPassTitle</h3>

        <div class="row omb_row-sm-offset-3" style="margin-bottom:10px">

            <div class="col-xs-12 col-sm-6">
                @using (Html.BeginForm("_ForgotPass", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <form class="omb_loginForm" action="" autocomplete="off" method="POST">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input type="text" class="form-control" name="UserName" placeholder="@WebViecLammoi.i18n.Common.User_Name" required>
                        </div>
                        <span class="help-block"></span>
                        <span class="help-block" style="font-family:monospace">@Html.ValidationSummary(false, "", new { @class = "text-danger" })</span>
                        <button class="btn btn-lg btn-primary btn-block" type="submit">@WebViecLammoi.i18n.Common.SendPass</button>
                    </form>
                }
            </div>

        </div>

    </div>

</div>

