
@{
    ViewBag.Title = "_Login";
    Layout = "~/Views/Shared/_SubLayout.cshtml";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<link href="~/Content/css/Login_Style.css" rel="stylesheet" />
<div class="container" style="width:100%;background-color: white; margin-top: 40px; border-radius: 4px 4px; box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.32);">

    <div class="omb_login">
        <h3 class="omb_authTitle "><a>ĐĂNG NHẬP </a></h3>
        <div class="row omb_row-sm-offset-3 omb_socialButtons">
            <div class="col-xs-1 col-sm-1"></div>
            <div class="col-xs-10 col-sm-10 col-md-4">
                <a href="/Account/loginFacebook" class="btn btn-lg btn-block omb_btn-facebook">
                    <i class="fa fa-facebook visible-xs"></i>
                    <span>Login với tài khoản Facebook</span>
                </a>
                <span class="help-block"></span><br />
            </div>

        </div>
        <span class="help-block">@Session["ThongbaoLogin"]</span>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            bool nho = @ViewBag.reme == "kh" ? true : false;
            <div class="row omb_row-sm-offset-3">
                <div class="col-xs-12 col-sm-6">
                    <form class="omb_loginForm" action="" autocomplete="off" method="post">
                        <span class="text-center text-danger">@Session["Thongbaodangky"]</span>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input value="@ViewBag.UserName" type="text" class="form-control" name="UserName" placeholder="Tên tài khoản" required>
                        </div>
                        <span class="help-block"></span>

                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input value="@ViewBag.Password" type="password" class="form-control" name="Password" placeholder="Mật khẩu" required>
                        </div>
                        <span class="help-block">@Html.ValidationSummary(false, "", new { @class = "text-danger" })</span>

                        <button class="btn btn-lg btn-primary btn-block" type="submit">Đăng nhập</button>
                        <label class="checkbox text-danger" style="margin-left:10px!important">
                            @Html.CheckBox("remember", nho) Nhớ tài khoản đăng nhập
                        </label>
                    </form>

                </div>

            </div>
            <div class="row omb_row-sm-offset-3">
                <div class="col-xs-12 col-sm-2">
                    <p class="omb_forgotPwd pull-left">
                        <a href="/Account/_ForgotPass">Quên mật khẩu ?</a>
                    </p>
                </div>

                <div class="col-xs-12 col-sm-4">
                    <p class="omb_forgotPwd">
                        <a href="/Dang-Ky">Tạo tài khoản</a>
                    </p>
                </div>
            </div>
        }
    </div>
</div>


