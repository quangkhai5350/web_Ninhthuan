
@{
    Layout = "~/Views/Shared/_SubLayout.cshtml";
}
<div class="row wrapper">

    <div class="divide24"> </div>
    <div class="col-sm-3">
        @Html.Action("_CandidateCategory", "Account")
        <div class="divide16"> </div>

        <div class="divide16"> </div>
    </div>
    <div class="col-sm-9" id="Candidate_Mana">
        <script>
            $(function () {
                $(".menu-content a:eq(0)").click(function () {
                    $.ajax({
                        url: "/Account/_CandidateDoc",
                        success: function (respone) {
                            if (respone == "No") {
                                location.reload();
                            } else {
                                $("#Candidate_Mana").html(respone);
                            }
                        }
                    });
                });
                $(".menu-content a:eq(1)").click(function () {
                    $("#loadingTD").show();
                    $.ajax({
                        url: "/Account/_CandidateManagement",
                        success: function (respone) {
                            if (respone == "No") {
                                location.reload();
                            } else {
                                setTimeout(function () {
                                    $("#Candidate_Mana").html(respone);
                                    //1s sau hiên lên
                                }, 800);
                                $("#loadingTD").hide();
                            }
                        }
                    });
                });
                $(".menu-content a:eq(2)").click(function () {
                    $.ajax({
                        url: "/Account/_CandidateInfo",
                        success: function (respone) {
                            if (respone == "No") {
                                location.reload();
                            } else {
                                $("#Candidate_Mana").html(respone);
                            }
                        }
                    });
                });
            });
            


        </script>
        @Html.Action("_CandidateDoc", "Account")

    </div>
</div>


