    <script>

        var pageNo = 0;
        var pageSize = 10;
        var count = 0;
        var bien = 0;
        var tk = '';//str
        var search = '';
        var isactive_tk = 1;
        var select_dc = 0;
        count = parseInt($('#count_NTV').html());
        loadpage(tk, select_dc)
        function loadpage(tk, select_dc) {
            $("#loading").show();
                $.ajax({
                    url: "/Candidate/CandidateList",
                    data: { pageNo: pageNo, pageSize: pageSize, str: tk, id: select_dc },
                    success: function (response) {
                        $("#NTV_all").append(response);
                        $("#loading").hide();
                        pageNo++;
                        isactive_tk = 1;
                        if (pageNo * 10 < count) {
                            $("#total_NTV").html(pageNo * 10);
                        } else {
                            $("#total_NTV").html(count);
                        }
                    }
                });
        }

        $(window).on("scroll", function () {
            var scroll = $(window).scrollTop();
            var scroll1 = $('#NTV_all').height()
            var scroll2 = scroll1 - scroll1/2;
            if (scroll >= scroll2 && bien < scroll2) {
                bien = scroll2;
                //alert(scroll2);
                this.console.log('scroll1: ' + scroll1 + " ;scroll2: " + scroll2);
                if (isactive_tk === 1) {
                    loadpage(tk, select_dc);
                }
                if (isactive_tk === 2) {
                    //loadpage_timkiem()
                }

            }
        });
        $("input:checkbox").on('click', function () {
            // in the handler, 'this' refers to the box clicked on
            var $box = $(this);
            if ($box.is(":checked")) {
                var group = "input:checkbox[name='" + $box.attr("name") + "']";
                $(group).prop("checked", false);
                $box.prop("checked", true);
                $('#NTV_all').html('');
                pageNo = 0;
                bien = 0;
                count = $box.attr("value");
                $('#count_NTV').html(count);//Gán giá trị cho nút Tổng
                tk = $box.attr("id"); select_dc = 0;
                $('#ThongBaoNTV').html(tk + ' có ' + $box.attr("value") + ' hồ sơ.');
                //bỏ chọn địa chỉ.
                selectOption(0);
                loadpage(tk, select_dc);
                //alert($box.attr("value"))
                if (document.getElementById("timkiem_ntv").value != '') {
                    document.getElementById("timkiem_ntv").value ='';
                }
            } else {
                $box.prop("checked", false);
                pageNo = 0;
                bien = 0;
                $('#NTV_all').html('');
                //alert($('#count_model').val())
                $('#count_NTV').html($('#count_model_NTV').val());
                tk = ''; select_dc = 0;
                count = parseInt($('#count_NTV').html());
                $('#ThongBaoNTV').html('');
                loadpage(tk, select_dc);
            }
        });
        function selectOption(index) {
            document.getElementById("select_dc").options.selectedIndex = index;
        }
        $(function () {
            $('#select_dc').change(function () {
                pageNo = 0;
                bien = 0;
                $('#NTV_all').html(''); //Xóa trắng html
                select_dc = $('#select_dc').val();
                if (select_dc == 0) {
                    //lấy count dự trữ xài
                    count = parseInt($('#count_model_NTV').val()) ;
                } else {
                    count = $(this).children(":selected").attr("id");
                }
                $('#count_NTV').html(count) //Gán tổng = count
                tk = '';
                $('#ThongBaoNTV').html($('#select_dc option:selected').text() + '(' + count + ')');
                //bỏ chọn cột bên trái.
                $("input:checkbox").prop("checked", false)
                isactive_tk = 1;
                if (document.getElementById("timkiem_ntv").value != '') {
                    document.getElementById("timkiem_ntv").value = '';
                }
                loadpage(tk, select_dc);
            });
        });
        function mySearchNTV() {
            search = document.getElementById("timkiem_ntv").value;
            $('#NTV_all').html(''); //Xóa trắng html
            if (tk != '') {
                $('#ThongBaoNTV').html(search + '_' + tk);
            }
            if (select_dc > 0) {
                $('#ThongBaoNTV').html(search + '_' + $('#select_dc option:selected').text());
            }
            if (select_dc === 0 && tk === '') {
                $('#ThongBaoNTV').html(search);
            }
            loadpage_timkiem(tk, search.trim(), select_dc);
        }
        function loadpage_timkiem(tk, search, select_dc) {
            $("#loading").show();
            $("#NTV_all").css('display', 'none');
            $.ajax({
                url: "/Candidate/Candidate_timkiem",
                data: { str : tk, str_timkiem : search, id: select_dc },
                success: function (response) {
                    $("#NTV_all").append(response);
                    setTimeout(function () {
                        $("#NTV_all").css('display', 'block');
                        //1s sau hiên lên
                    }, 800);
                    $("#loading").hide();
                    isactive_tk = 2; //không load hàm isactive_tk=1
                    $('#count_NTV').html('');
                    $("#total_NTV").html('');
                }
            });
        }
    </script>
