@using WebViecLammoi.Models
<form class="info_form" method="post">
    @using (Html.BeginForm("ThemKinhNghiem", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            <input placeholder="Tên Cty" style="height: 41px !important" type="text" class="form-control" name="TenCongTy" required>
        </div>
        <div class="form-group">
            <input placeholder="Chức vụ" style="height: 41px !important" type="text" class="form-control" name="ChucVu" required>
        </div>
        <div class="row">
            <div class="col-md-6">
                <p>Từ tháng</p>
                <input type="date" name="TuThangCV" required />
            </div>
            <div class="col-md-6">
                <p>Đến tháng</p>
                <input type="date" name="DenThangCV" required />
            </div>
        </div>
        <div class="form-group">
            <p>Công việc chính </p>
            <span class="icon-case"><i class="fa fa-comments-o"></i></span>
            <textarea name="CongViecChinh" class="form-control" rows="4"></textarea>
            <div class="validation"></div>

        </div>
        <div class="form-group">
            <p>Kinh nghiệm làm việc nước ngoài </p>
            <span class="icon-case"><i class="fa fa-comments-o"></i></span>
            <textarea name="DaLamViecNuocNgoai" class="form-control" rows="4"></textarea>
            <div class="validation"></div>

        </div>
        <div class="form-group" style="text-align:center">
            <button id="btnCV" class="bouton-contact">Thêm Kinh Nghiệm</button>
            <script>
                $(function () {
                    $("#btnCV").click(function () {
                        this.form.action = "/Account/ThemKinhNghiem";
                    });
                });
            </script>
        </div>
            
            }
    </form>
